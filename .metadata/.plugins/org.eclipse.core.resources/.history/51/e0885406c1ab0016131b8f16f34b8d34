import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Interpreter {

	File file;
	Scanner fileScan;
	Scanner lineScan;
	int k;
	String token;
	String flag = "ORIGIN";
	String dna = "actgn";
	
	
	public Interpreter(File file, int k) {
		
		this.file = file;
		this.k = k;
		
		try {
			fileScan = new Scanner(file);
		} catch (FileNotFoundException e) {
			System.err.println("The file " + file + " could not be found.");
			e.printStackTrace(); // for debugging, remove later
			System.exit(1);
		}
		
		// Position the scanner 
		findFlag();
		
		// At this point, token = ORIGIN
		if (lineScan.hasNext()) {
			String line = lineScan.next();

			
		}
	}
	
	
	public void findFlag() {
		
		while (fileScan.hasNextLine()) {	
			lineScan = new Scanner(fileScan.nextLine());
			
			while (lineScan.hasNext()) {
				if (token.equals(flag)) {
					
					return;
				
				} else {
					token = lineScan.next();					
				
				}
			}	
		}
	}
	
	
}
	
	
