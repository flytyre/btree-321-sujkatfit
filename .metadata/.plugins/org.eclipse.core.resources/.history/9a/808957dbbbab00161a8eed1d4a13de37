import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Interpreter {

	File file;
	Scanner fileScan;
	int k;
	String token;
	boolean flagFound;
	String flag = "ORIGIN";
	
	
	public Interpreter(File file, int k) {
		
		this.file = file;
		this.k = k;
		flagFound = false;
		
		try {
			fileScan = new Scanner(file);
		} catch (FileNotFoundException e) {
			System.err.println("The file " + file + " could not be found.");
			e.printStackTrace(); // for debugging, remove later
			System.exit(1);
		}
		
		// Position the scanner 
		findFlag();
		
		// At this point, token = ORIGIN
		
	
		
		
		
		
	}
	
	public void findFlag() {
		while (fileScan.hasNextLine() && !flagFound) {
			
			Scanner lineScan = new Scanner(fileScan.nextLine());
			
			while (lineScan.hasNext() && !flagFound) {
			
				if (token.equals(flag)) {
					flagFound = true;
				
				} else {
					token = lineScan.next();					
				
				}
			}	
		}
	}
				
}
	
	
